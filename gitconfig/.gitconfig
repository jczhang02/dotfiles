[user]
	name = jczhang02
    email = jczhang@live.it
	signingkey = 1F863CBFD6EDCA6B
[commit]
    gpgsign = true
	template = /home/jc/.config/git/git-commit-template.txt
[gpg]
    program = /usr/bin/gpg
[alias]
    logs = log --show-signature

[core]
    pager = bat
	editor = nvim

[interactive]
    diffFilter = delta 
[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[init]
    defaultBranch = main
    # templatedir = ~/.config/git/git_template/template

[credential]
	helper = cache
